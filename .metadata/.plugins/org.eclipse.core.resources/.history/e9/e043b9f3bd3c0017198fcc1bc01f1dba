package finalJava;
import javax.swing.JOptionPane;
import java.util.Random;
import javax.swing.*;
public class FlipACoin {

	

	public static void displayOutcome()
	{
		Random r = new Random();
		int computer = r.nextInt(2) + 1;
		String userPick, computerPick;
		String userAnswer;
		int answerInt, result, win, lose;
		
		userAnswer = JOptionPane.showInputDialog(null, "Choose \n0 for Heads\n1 for Tails");
		answerInt = Integer.parseInt(userAnswer);

		if(answerInt == 0)
			userAnswer = "Heads";
		else
			if(answerInt == 1)
				userAnswer = "Tails";
		if(computer == 0)
			computerPick = "Heads";
		else
			if(computer == 1)
				computerPick = "Tails";
		if(answerInt == 0);
			if(computer == 0)
				result = win;
			else
				if(computer == 1)
					result = lose;				
		if(answerInt == 1)
			if(computer == 1)
				result = win;
			else
				if(computer == 0)
					result = lose;
		
		JOptionPane.showMessageDialog(null,  "You picked " + userAnswer + ". The coin landed on " + computer + ". " + result);
	}
}
